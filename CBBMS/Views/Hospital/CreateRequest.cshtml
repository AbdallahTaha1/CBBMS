@model HospitalRequestViewModel

@{
    ViewData["Title"] = "Request Blood";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg p-4">
                <h2 class="text-center mb-4">Request Blood from Blood Bank</h2>

                <form asp-action="CreateRequest" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                    <div class="form-group mb-3">
                        <label asp-for="BloodType" class="form-label"></label>
                        <select asp-for="BloodType" class="form-select">
                            <option value="">-- Select Blood Type --</option>
                            <option value="A+">A+</option>
                            <option value="A-">A-</option>
                            <option value="B+">B+</option>
                            <option value="B-">B-</option>
                            <option value="O+">O+</option>
                            <option value="O-">O-</option>
                            <option value="AB+">AB+</option>
                            <option value="AB-">AB-</option>
                        </select>
                        <span asp-validation-for="BloodType" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="PatientStatus" class="form-label"></label>
                        <select asp-for="PatientStatus" class="form-select">
                            <option value="">-- Select Patient Status --</option>
                            <option value="Urgent">Urgent</option>
                            <option value="Critical">Critical</option>
                            <option value="Normal">Normal</option>
                        </select>
                        <span asp-validation-for="PatientStatus" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Quantity" class="form-label"></label>
                        <input asp-for="Quantity" class="form-control" type="number" min="1" placeholder="Enter quantity (bags)" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Submit Request</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
