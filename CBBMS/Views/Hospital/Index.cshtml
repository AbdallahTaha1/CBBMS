@model Hospital
@{
    ViewData["Title"] = "My Hospital";
}

<div class="container mt-4">
    <div class="card shadow-lg rounded">
        <div class="card-header bg-primary text-white">
            <h3>Hospital Info</h3>
        </div>
        <div class="card-body">
            <p><strong>Name:</strong> @Model.FullName</p>
            <p><strong>Address:</strong> @Model.City</p>
        </div>
        <div class="card-footer">
            <a asp-action="Edit" class="btn btn-warning">Edit</a>
        </div>
    </div>
</div>


<div class="container mt-5">
    <div class="d-flex justify-content-between mb-4">
        <h2>My Blood Requests</h2>
        <a asp-action="CreateRequest" asp-controller="HospitalRequest" class="btn btn-success rounded">+ Add New Request</a>
    </div>

    @if (Model.HospitalRequests != null && Model.HospitalRequests.Any())
    {
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Blood Type</th>
                    <th>Patient Status</th>
                    <th>Quantity</th>
                    <th>Request Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var request in Model.HospitalRequests)
                {
                    <tr>
                        <td>@request.BloodType</td>
                        <td>@request.PatientStatus</td>
                        <td>@request.Quantity</td>
                        <td>@request.RequestDate.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@request.Id" class="btn btn-sm btn-warning">Edit</a>
                                <a asp-action="Delete" asp-route-id="@request.Id" class="btn btn-sm btn-danger ms-2">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info text-center" role="alert">
            You have no blood requests yet.
        </div>
    }
</div>