@{
    ViewData["Title"] = "Home";
}

<div class="container py-5">
    <div class="row align-items-center justify-content-center text-center">
        <div class="col-lg-8">
            <h1 class="display-4 mb-3 text-primary fw-bold">Welcome to the Central Blood Bank System</h1>
            <p class="lead text-muted mb-4">
                Help save lives by donating blood. Your contribution makes a difference.
            </p>
            <a class="btn btn-danger btn-lg px-5 py-3 rounded-pill shadow" asp-controller="DonationRequest" asp-action="Donate">
                <i class="bi bi-droplet-fill me-2"></i> Donate Blood
            </a>
        </div>
    </div>
</div>
