@model IEnumerable<BloodStockUnits>

@{
    ViewData["Title"] = "Blood Stock";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Blood Stock</h2>

    @if (Model.Any())
    {
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Blood Type</th>
                    <th>Expiration Date</th>
                    <th>Added Date</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var bag in Model)
                {
                    <tr>
                        <td>@bag.BloodType</td>
                        <td>@bag.DonationDate.ToString("dd/MM/yyyy")</td>
                        <td>@bag.ExpiryDate.ToString("dd/MM/yyyy")</td>
                        <td>
                            @if (bag.ExpiryDate < DateTime.Now)
                            {
                                <span class="badge bg-danger">Expired</span>
                            }
                            else
                            {
                                <span class="badge bg-success">Available</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info text-center" role="alert">
            No blood bags available in stock.
        </div>
    }
</div>
